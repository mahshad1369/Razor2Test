@page
@model Razor2Test.Pages.Products.IndexModel
@{
}

<h2>Product List</h2>
<hr />
<a class="btn btn-success" asp-page="/Products/AddNewProduct">+</a>
<table class="table">
    <thead class="table-dark">
    </thead>
    <tbody>
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Products)
                {
                    <div class="col-4 mt-5">
                        <div class="card">
                            <img src="@item.PhotoPath" class="card-img-top" alt="..." style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.ShortDescription</p>
                                <a class="btn btn-info" asp-page="/Products/ProductDetails" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-primary" asp-page="/Products/EditDelete" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row mt-5 mb-5">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

    </tbody>
</table>

